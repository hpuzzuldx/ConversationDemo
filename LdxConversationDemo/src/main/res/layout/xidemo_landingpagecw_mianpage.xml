<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/xidemo_landingpageactivity_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="LandingpageCW single Activity "
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <Button
        android:id="@+id/xidemo_landingpageview_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="LandingpageCW View use "
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <Button
        android:id="@+id/xidemo_landingpage_cleancache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="remove cache "
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
