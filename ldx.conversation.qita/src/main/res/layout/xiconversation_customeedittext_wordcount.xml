<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inputtext_circlecorner_shape"
    android:orientation="vertical">

    <com.ldx.conversationother.view.MulLineEditText
        android:id="@+id/xiconversation_customview_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/xiconversation_bottomview_chatwithxiaoice"
        android:imeOptions="actionSend"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:scrollbars="none"
        android:background="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:minHeight="@dimen/xiconversation_bottomview_defaultheight"
        android:textColor="@color/xiconversation_chat_leftfont_color"
        android:textColorHint="@color/xiconversation_chatpage_bottomsend_textcolor"
        android:textSize="@dimen/xiconversation_chat_activity_fontsize"
        android:visibility="visible"  />

    <TextView
        android:id="@+id/xiconversation_customview_wordcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xiconversation_customview_edittext"
        android:gravity="right"
        android:paddingRight="15dp"
        android:textSize="@dimen/xiconversation_bottomview_wordcountlimit_size"
        android:textColor="@color/xiconversation_bottom_limit_wordcount"
        android:visibility="gone" />

</LinearLayout>