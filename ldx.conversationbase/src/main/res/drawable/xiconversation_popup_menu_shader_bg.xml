<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2.5dp"
        android:bottom = "2.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:startColor="#eeeeee"
                android:endColor="#efefef"/>
        </shape>
    </item>

    <item
        android:left="3dp"
        android:top="3dp"
        android:bottom="3dp"
        android:right="3dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"/>
        </shape>
    </item>

</layer-list>