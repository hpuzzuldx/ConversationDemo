<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/xiconversation_fromuserimg_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/xiconversation_light_gray_6"
        android:textSize="@dimen/xiconversation_chat_default_chattime_fontsize"
        android:visibility="gone"
        tools:text="time"
        tools:visibility="visible"/>

    <com.ldx.conversationbase.widget.XICircleImageView
        android:id="@+id/xiconversation_fromuserimg_tb_other_user_icon"
        android:layout_width="@dimen/xiconversation_chatview_headicon_defsize"
        android:layout_height="@dimen/xiconversation_chatview_headicon_defsize"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/xiconversation_fromuserimg_chat_time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xiconversation_fromuserimg_chat_time"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/xiconversation_fromuserimg_tb_other_user_icon"
        android:orientation="horizontal">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/xiconversation_fromuserimg_image_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:loopCount="0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>

</RelativeLayout>