<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/xiconversation_image_view_rl"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/xiconversation_black">
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.github.chrisbanes.photoview.PhotoView
			android:id="@+id/xiconversation_imageView_item_giv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitCenter"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/xiconversation_imageview_loadtosd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="20dp"
			android:padding="5dp"
			android:src="@drawable/xiconversation_chatpage_imageview_download">
		</ImageView>
	</FrameLayout>


</RelativeLayout>
