<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xiconversation_transparent"
    android:padding="5dp">

    <TextView
        android:id="@+id/xiconversation_fromusermsg_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/xiconversation_light_gray_6"
        android:textSize="@dimen/xiconversation_chat_default_chattime_fontsize"
        android:visibility="gone" />

    <com.ldx.conversationbase.widget.XICircleImageView
        android:id="@+id/xiconversation_fromusermsg_tb_other_user_icon"
        android:layout_width="@dimen/xiconversation_chatview_headicon_defsize"
        android:layout_height="@dimen/xiconversation_chatview_headicon_defsize"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/xiconversation_fromusermsg_chat_time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xiconversation_fromusermsg_chat_time"
        android:layout_toRightOf="@+id/xiconversation_fromusermsg_tb_other_user_icon"
        android:background="@color/xiconversation_transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xiconversation_fromusermsg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:autoLink="web"
            android:background="@drawable/xiconversation_chatfrom_bg_focused"
            android:textColor="@color/xiconversation_chat_leftfont_color"
            android:textSize="@dimen/xiconversation_chat_default_fontsize" />
    </LinearLayout>

</RelativeLayout>