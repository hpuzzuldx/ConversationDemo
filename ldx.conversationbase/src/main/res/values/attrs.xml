<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="direction">
        <enum name="rightToLeft" value="0" />
        <enum name="bottomToTop" value="1" />
        <enum name="leftToRight" value="2" />
        <enum name="topToBottom" value="3" />
    </attr>

    <declare-styleable name="FocusImageView">
        <attr name="focus_focusing_id" format="integer" />
        <attr name="focus_success_id" format="integer" />
        <attr name="focus_fail_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="XICircleImageView">
        <attr name="xiconversation_civ_border_width" format="dimension" />
        <attr name="xiconversation_civ_border_color" format="color" />
        <attr name="xiconversation_civ_border_overlay" format="boolean" />
        <attr name="xiconversation_civ_fill_color" format="color" />
    </declare-styleable>
</resources>